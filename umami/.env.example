# Umami Analytics Environment Variables
# Generate secrets with: openssl rand -hex 32

# Database
DATABASE_URL=postgresql://umami:umami@localhost:5432/umami
DATABASE_TYPE=postgresql
POSTGRES_PASSWORD=change-me-to-secure-password

# Security & Auth (REQUIRED - generate with: openssl rand -hex 32)
HASH_SALT=change-me-to-random-32-byte-hex
NEXTAUTH_SECRET=change-me-to-random-32-byte-hex
NEXTAUTH_URL=https://umami.cjunker.dev

# Analytics
TRACKER_SCRIPT_NAME=script.js
CLIENT_IP_HEADER=CF-Connecting-IP

# Telemetry & Performance
DISABLE_TELEMETRY=1
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=production

# Server (optional)
PORT=3000
HOSTNAME=0.0.0.0
